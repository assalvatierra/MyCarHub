        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
