@page
@model MyCarCare.Pages.Main.Login.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MySupportLogin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MySupportLogin.Id" />
            <div class="form-group">
                <label asp-for="MySupportLogin.Name" class="control-label"></label>
                <input asp-for="MySupportLogin.Name" class="form-control" />
                <span asp-validation-for="MySupportLogin.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MySupportLogin.MyAccountId" class="control-label"></label>
                <select asp-for="MySupportLogin.MyAccountId" class="form-control" asp-items="ViewBag.MyAccountId"></select>
                <span asp-validation-for="MySupportLogin.MyAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MySupportLogin.LoginId" class="control-label"></label>
                <input asp-for="MySupportLogin.LoginId" class="form-control" />
                <span asp-validation-for="MySupportLogin.LoginId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MySupportLogin.Remarks" class="control-label"></label>
                <input asp-for="MySupportLogin.Remarks" class="form-control" />
                <span asp-validation-for="MySupportLogin.Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
